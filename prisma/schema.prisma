generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sermon {
  id           Int         @id @default(autoincrement())
  title        String
  speaker      String?
  date         DateTime
  scripture    String?
  description  String?
  note         String?
  type         ContentType
  url          String?
  createdAt    DateTime    @default(now())
  sermonImage  String?
  speakerImage String?
  key          String?
  youtubeId    String?
  updatedAt    DateTime    @default(now()) @updatedAt
}

enum ContentType {
  AUDIO
  VIDEO
}
